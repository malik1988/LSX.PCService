<Window x:Class="LSX.PCService.Views.WindowDispatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
        Title="分拣窗口" Height="300" Width="300">
    <Grid>
        <Border BorderBrush="Orange" BorderThickness="3" CornerRadius="5">
            <StackPanel>
                <Label Content="分拣窗口" HorizontalAlignment="Center" FontSize="30"/>
                <Border>
                    <WrapPanel>
                        <Label Content="程序计数" />
                        <Label Content="{Binding ProgramCount}" Margin="5,0"/>
                        <Label Content="通道硬件计数"/>
                        <Label Content="{Binding ChannelCount}" Margin="5,0"/>
                    </WrapPanel>
                </Border>
                <DataGrid ItemsSource="{Binding OkChannelOrderList}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
