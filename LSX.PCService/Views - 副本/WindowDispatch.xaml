<UserControl x:Class="LSX.PCService.Views.WindowDispatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Orange" BorderThickness="3" CornerRadius="5">
            <StackPanel>
                <Label Content="分拣窗口" HorizontalAlignment="Center" FontSize="30"/>
                <Border>
                    <WrapPanel>
                        <Label Content="程序计数" />
                        <Label Content="{Binding ProgramCount}" Margin="5,0"/>
                        <Label Content="通道硬件计数"/>
                        <Label Content="{Binding ChannelCount}" Margin="5,0"/>
                        
                    </WrapPanel>
                </Border>
                <DataGrid ItemsSource="{Binding OkChannelOrderList}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
