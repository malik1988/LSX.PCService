<Window x:Class="LSX.PCService.Views.WindowOnline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="上料口" Height="400
        " Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Content="Tool1"/>
        </ToolBar>
        <Border Grid.Row="1" BorderBrush="Orange" CornerRadius="5" BorderThickness="2" Margin="5">
            <StackPanel>
                <Label Content="当前扫描的箱号"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" BorderBrush="Blue" BorderThickness="2" CornerRadius="5" Margin="2">
            <StackPanel Orientation="Horizontal">
                <!--来货单号-->
                <ListView >
                    <ListViewItem>来货单号</ListViewItem>
                </ListView>
                <ListView>
                    <ListViewItem>当前订单任务信息，箱号、09码、当前箱/总箱数、目标目的地（质检、2F、3F）</ListViewItem>
                </ListView>
                <ListView>
                    <ListViewItem>当前待分拣车辆09码总数</ListViewItem>
                </ListView>
            </StackPanel>
        </Border>
        <StatusBar Grid.Row="3">
            <Label Content="状态："/>
        </StatusBar>
    </Grid>
</Window>
